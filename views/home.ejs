<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>CRUD</title>
    <link rel="stylesheet" href="/css/semantic.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>
    <div class="site">
        <div class="ui massive menu">
            <div class="ui container">
                <div class="item"><a href="/">Home</a></div>
                <div class="item">About</div>
                <div class="item">Contact</div>
                <div class="item">Blog</div>
            </div>
        </div>
        <br>
        <br>
        <br>
        <div class="ui container">
            <form id="form" action="/add" class="ui form" method="POST">
                <div class="three fields">
                    <div class="field">
                        <label for="label" class="ui header green">Enter Movie name</label>
                        <input type="text" name="name" placeholder="Enter Movie name" value=""  id="name">
                    </div>
                    <div class="field">
                        <label for="label" class="ui header green">Enter IMG URL</label>
                        <input type="text" name="players" placeholder="Enter IMG URL" value="" id="players">
                    </div>
                    <div class="field">
                        <label for="label" class="ui header green">Enter Summary</label>
                        <input type="text" name="coach" placeholder="Enter Summary" value="" id="coach">
                    </div>
                </div>
                <!-- <div class=" one fields"> -->
                    <div class="field fluid">
                        <button type="submit" class="ui button fluid green">Save</button>
                    </div>
                <!-- </div> -->
            </form>
            <br>
            <br>
            <br>
            
            <table class="ui table green" >
                <thead>
                    <tr>
                        <th>Movie Name</th>
                        <th>IMG URL</th>
                        <th>Summary</th>
                        <th >Edit</th>
                        <th>Delete</th>
                    </tr>
                </thead>
                <tbody>
                    <% teams.forEach((team)=>{%>
                        <tr>
                            <td id="teamName"><%- team.name %></td>
                            <td id="teamPlayers"><%- team.players %></td>
                            <td id="teamCoach"><%- team.coach %></td>
                            <td><a class="ui button green editBtn" href="/edit/<%= team._id %>"><i class="edit white icon"></i></a></td>
                            <td><a class="ui button green actnBtn" href="/<%= team._id %>"><i id="delete" class="minus red icon"></i></a></td>
                        </tr>
                      <% }); %>
                </tbody>
            
